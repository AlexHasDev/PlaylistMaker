<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="main_menu_button_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:backgroundTint">@color/design_default_color_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/almostBlack</item>
        <item name="android:textSize">@dimen/textSizeMenu</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="textView_settings_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_settings_menu</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>


    </style>

    <style name="main_menu_background">
        <item name="android:background">@color/blue_for_background</item>
    </style>

    <style name="default_menu_background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="menu_title_style">
        <item name="android:textColor">@color/almostBlack</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="arrow_back_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:tint">@color/almostBlack</item>
    </style>

    <style name="search_edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:background">@drawable/search_background</item>
        <item name="android:drawableStart">@drawable/ic_search_search_textedit</item>
        <item name="android:drawablePadding">9dp</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textColor">@color/almostBlack</item>
    </style>

    <style name="song_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="item_track_name_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="item_track_artist_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="item_arrow_style">
        <item name="tint">@color/gray</item>
    </style>

    <style name="clear_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:background">@drawable/search_background</item>
    </style>

    <style name="search_placeholder">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="search_placeholder_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/almostBlack</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
        <item name="android:paddingTop">16dp</item>
    </style>

    <style name="refresh_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/almostBlack</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="player_track_description_titles_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="player_track_description_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/almostBlack</item>
    </style>

    <style name="player_trackName_artistName_time_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_for_player_artistName_and_time</item>
        <item name="android:textColor">@color/almostBlack</item>
        <item name="android:fontFamily">@font/ys_text_medium</item>
    </style>

    <style name="playlist_gray_button_style">
        <item name="android:layout_width">51dp</item>
        <item name="android:layout_height">51dp</item>
        <item name="android:background">@drawable/player_gray_button</item>
    </style>


</resources>
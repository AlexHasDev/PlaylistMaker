<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.MainActivity"
    style="@style/main_menu_background"
    android:paddingTop="14dp"
    android:paddingEnd="15dp"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry"
    android:paddingBottom="28dp"
    android:paddingStart="17dp">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp">

    <TextView
        style="@style/menu_title_style"
        android:text="@string/app_name"
        android:fontFamily="@font/ys_display_medium"/>

</FrameLayout>

    <Button
        android:id="@+id/search"
        style="@style/main_menu_button_style"
        app:cornerRadius="@dimen/corner_radius_main_menu"
        android:text="@string/search"
        app:icon="@drawable/ic_search"
        app:iconGravity="textStart"
        app:iconTint="@color/almostBlack"
        app:iconPadding="@dimen/main_icon_padding" />

    <Button
        android:id="@+id/media"
        style="@style/main_menu_button_style"
        app:cornerRadius="@dimen/corner_radius_main_menu"
        android:text="@string/media"
        app:icon="@drawable/ic_music"
        app:iconGravity="textStart"
        app:iconTint="@color/almostBlack"
        app:iconPadding="@dimen/main_icon_padding" />

    <Button
        android:id="@+id/settings"
        style="@style/main_menu_button_style"
        app:cornerRadius="@dimen/corner_radius_main_menu"
        android:text="@string/settings"
        app:icon="@drawable/ic_settings"
        app:iconGravity="textStart"
        app:iconTint="@color/almostBlack"
        app:iconPadding="@dimen/main_icon_padding" />

</LinearLayout>
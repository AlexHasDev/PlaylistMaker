<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/default_menu_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingTop="14dp"
    tools:context=".UI.SettingsActivity"
    tools:ignore="RtlSymmetry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/settings_arrow_back"
            style="@style/arrow_back_style"
            android:src="@drawable/ic_arrow_back" />


        <TextView
            style="@style/menu_title_style"
            android:layout_marginStart="28dp"
            android:text="@string/settings" />

    </LinearLayout>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/theme_switcher"
        style="@style/textView_settings_menu"
        android:layout_marginTop="42dp"
        android:filterTouchesWhenObscured="false"
        android:fitsSystemWindows="false"
        android:paddingVertical="@dimen/padding_vertical_settings_menu"
        android:text="@string/darkTheme"
        tools:ignore="UseSwitchCompatOrMaterialXml" />


    <TextView
        android:id="@+id/share"
        style="@style/textView_settings_menu"
        android:paddingVertical="@dimen/padding_vertical_settings_menu"
        android:text="@string/share"
        app:drawableEndCompat="@drawable/ic_share" />

    <TextView
        android:id="@+id/sent_to_support"
        style="@style/textView_settings_menu"
        android:paddingVertical="@dimen/padding_vertical_settings_menu"
        android:text="@string/support"
        app:drawableEndCompat="@drawable/ic_support" />


    <TextView
        android:id="@+id/terms_of_use"
        style="@style/textView_settings_menu"
        android:paddingVertical="@dimen/padding_vertical_settings_menu"
        android:text="@string/termsOfuse"
        app:drawableEndCompat="@drawable/ic_arrow_forward" />


</LinearLayout>